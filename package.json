{
  "name": "webext-storage-cache",
  "version": "1.0.1",
  "description": "WebExtensions module: Map-like promised cache storage with expiration. Chrome and Firefox.",
  "license": "MIT",
  "repository": "bfred-it/webext-storage-cache",
  "author": "Connor Love",
  "contributors": [
    "Federico Brigante <github@bfred.it> (bfred.it)"
  ],
  "keywords": [
    "cache",
    "map",
    "temporary",
    "expirating",
    "self-cleaning",
    "background page",
    "content script",
    "options page",
    "promises",
    "await",
    "browser",
    "extension",
    "webext",
    "web-ext",
    "chrome",
    "firefox"
  ],
  "files": [
    "index.js",
    "index.d.ts",
    "module/index.js"
  ],
  "module": "module/index.js",
  "scripts": {
    "test": "xo && tsc --noEmit",
    "prepublishOnly": "npm run build --silent",
    "build": "tsc && tsc --module es2015 --outDir module --declaration false",
    "watch": "tsc --watch"
  },
  "xo": {
    "extensions": [
      "ts"
    ],
    "envs": [
      "browser",
      "webextensions"
    ],
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "xo-typescript"
      }
    ]
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.4.0",
    "@types/chrome": "0.0.86",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint-config-xo-typescript": "^0.15.0",
    "typescript": "^3.5.0",
    "xo": "*"
  },
  "dependencies": {
    "webext-detect-page": "^1.0.1"
  }
}
