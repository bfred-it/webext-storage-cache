{
	"name": "webext-storage-cache",
	"version": "6.0.0-2",
	"description": "Cache values in your Web Extension and clear them on expiration. Also includes a memoize-like API to cache any function results automatically.",
	"keywords": [
		"await",
		"background page",
		"browser",
		"cache",
		"chrome",
		"content script",
		"expirating",
		"extension",
		"firefox",
		"safari",
		"memoize",
		"memoization",
		"options page",
		"promises",
		"self-cleaning",
		"temporary",
		"web-ext",
		"webext"
	],
	"repository": "fregante/webext-storage-cache",
	"funding": "https://github.com/sponsors/fregante",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"contributors": [
		"Connor Love"
	],
	"type": "module",
	"types": "./distribution/index.d.ts",
	"exports": {
		".": "./distribution/index.js",
		"legacy.js": "./distribution/legacy.js"
	},
	"files": [
		"distribution/index.js",
		"distribution/index.d.ts",
		"distribution/legacy.js",
		"distribution/legacy.d.ts",
		"distribution/cache-item.js",
		"distribution/cache-item.d.ts",
		"distribution/updatable-cache-item.js",
		"distribution/updatable-cache-item.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "tsc && tsd && vitest && xo",
		"watch": "tsc --watch"
	},
	"tsd": {
		"directory": "source"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		]
	},
	"dependencies": {
		"@sindresorhus/to-milliseconds": "^2.0.0",
		"type-fest": "^3.11.0",
		"webext-detect-page": "^4.1.0",
		"webext-polyfill-kinda": "^1.0.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/chrome": "0.0.236",
		"@types/sinon-chrome": "^2.2.11",
		"sinon-chrome": "^3.0.1",
		"tsd": "^0.28.1",
		"typescript": "^5.0.4",
		"vitest": "^0.31.1",
		"xo": "^0.54.2"
	}
}
