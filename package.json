{
  "name": "webext-storage-cache",
  "version": "2.3.0",
  "description": "WebExtensions module: Map-like promised cache storage with expiration. Chrome and Firefox.",
  "keywords": [
    "await",
    "background page",
    "browser",
    "cache",
    "chrome",
    "content script",
    "expirating",
    "extension",
    "firefox",
    "map",
    "options page",
    "promises",
    "self-cleaning",
    "temporary",
    "web-ext",
    "webext"
  ],
  "repository": "fregante/webext-storage-cache",
  "license": "MIT",
  "author": "Connor Love",
  "contributors": [
    "Federico Brigante <opensource@bfred.it> (bfred.it)"
  ],
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "tsc",
    "test": "run-s build test:*",
    "test:ava": "ava --serial",
    "test:tsd": "tsd",
    "test:xo": "xo",
    "watch": "tsc --watch"
  },
  "xo": {
    "envs": [
      "browser",
      "webextensions"
    ],
    "extensions": [
      "ts"
    ],
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "xo-typescript",
        "parserOptions": {
          "project": "./tsconfig.xo.json"
        }
      }
    ],
    "rules": {
      "import/extensions": 0,
      "import/no-unassigned-import": 0,
      "import/no-useless-path-segments": 0,
      "unicorn/import-index": 0
    }
  },
  "ava": {
    "nodeArguments": [
      "--experimental-modules"
    ]
  },
  "dependencies": {
    "webext-detect-page": "^2.0.2"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.6.0",
    "@types/chrome": "0.0.91",
    "@types/sinon-chrome": "^2.2.6",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "ava": "^3.3.0",
    "eslint-config-xo-typescript": "^0.23.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^8.1.1",
    "sinon-chrome": "^3.0.1",
    "tsd": "^0.11.0",
    "typescript": "^3.7.3",
    "xo": "*"
  }
}
